@model DogGo.Models.ViewModels.WalkerFormViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class = "col-sm-2">
            <p>Neighborhood</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Walker.Neighborhood.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class = "col-sm-10">
            <img width="50" class="bg-info" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
    </dl>
</div>

<section class="col-lg-4 col-md-8 container mt-5">
    <h4>Walks</h4>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <p>Date</p>
                </th>
                <th>
                    <p>Duration</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Walk walk in Model.Walks)
            {
             
                <td class="list-group-item disabled" aria-disabled="true">

                    <span class="font-weight-bold ml-4">@walk.Date</span>

                </td>
                <td class="list-group-item disabled" aria-disabled="true">

                    <span class="font-weight-bold ml-4">@walk.Duration</span>
                </td>
              
             }
         </tbody>
    </table>
</section>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Walker.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
